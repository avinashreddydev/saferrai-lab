---
import Layout from './Layout.astro';

interface Props {
  title: string;
  author: string;
  date: string;
  image?: string;
  tags: string[];
}

const { title, author, date, image, tags } = Astro.props;

// Format date for display
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={`${title} - SAFERR AI Lab Blog`}>
  <article class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <div class="flex flex-wrap gap-2 mb-4">
          {tags.map(tag => (
            <a href={`/blog/tag/${tag}`} class="badge badge-primary badge-outline">
              {tag}
            </a>
          ))}
        </div>
        
        <h1 class="text-4xl font-bold mb-4">{title}</h1>
        
        <div class="flex items-center text-sm text-gray-600 mb-6">
          <span>By {author}</span>
          <span class="mx-2">â€¢</span>
          <time datetime={date}>{formattedDate}</time>
        </div>
        
        {image && (
          <div class="mb-8">
            <img 
              src={image} 
              alt={title} 
              class="w-full h-auto rounded-lg shadow-md object-cover max-h-96"
            />
          </div>
        )}
      </div>
      
      <div class="prose prose-lg max-w-none">
        <slot />
      </div>
      
      <div class="mt-16 border-t pt-8">
        <h2 class="text-2xl font-bold mb-4">Share This Post</h2>
        <div class="flex gap-4">
          <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url)}`} target="_blank" rel="noopener noreferrer" class="text-primary hover:text-primary-focus" aria-label="Share on Twitter">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </a>
          <a href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url)}&title=${encodeURIComponent(title)}`} target="_blank" rel="noopener noreferrer" class="text-primary hover:text-primary-focus" aria-label="Share on LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href={`mailto:?subject=${encodeURIComponent(title)}&body=${encodeURIComponent(`Check out this post from SAFERR AI Lab: ${Astro.url}`)}`} class="text-primary hover:text-primary-focus" aria-label="Share via Email">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style is:global>
  /* Additional styling for math rendering */
  .katex-display {
    overflow-x: auto;
    overflow-y: hidden;
    padding: 1rem 0;
  }
</style> 